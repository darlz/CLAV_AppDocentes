<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tivi.appinicio.VistaMaterias.IngresarMaterias">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="MATERIA:"
                    android:textSize="20dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="DESCRIPCIÃ“N:"
                    android:textSize="20dp"
                    android:textColor="@android:color/black" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp">

                <EditText
                    android:id="@+id/txt_nombreMateria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="PROGRAMACION"
                    android:textColor="#080808"
                    android:textSize="17dp"
                    android:layout_marginTop="25dp"
                    />

                <EditText
                    android:id="@+id/txt_estadoMateria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO HAY"
                    android:textColor="#080808"
                    android:textSize="17dp"
                    android:layout_marginTop="22dp"
                    />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_ingresarMateria"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="GUARDAR"
                android:textSize="15dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:background="@drawable/fondobotonguardar"
                />
            <Button
                android:id="@+id/btnListarMaterias"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="LISTAR MATERIAS"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:background="@drawable/fondobotonlistar"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
