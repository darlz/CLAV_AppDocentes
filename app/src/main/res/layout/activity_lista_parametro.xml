<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tivi.appinicio.ListaParametro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARÁMETROS REGISTRADOS"
            android:textSize="25dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#f50202"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewParametros"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonPromedioFinal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="PROMEDIO FINAL"
                android:background="@drawable/fondobotonguardar"/>

            <TextView
                android:id="@+id/PromedioFinalPArametrosConPorcentaje"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="PROMEDIO"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/PasaNoPasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="PASA O NO PASA"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#512020"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
