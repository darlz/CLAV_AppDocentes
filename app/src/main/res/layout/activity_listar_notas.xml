<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tivi.appinicio.AddNota.ListarNotas">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTA DE NOTAS"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#f50101"
            android:textStyle="bold"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALOR PORCENTUAL:"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/PorcentajeRecibido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="VALOR "
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#f1e1e60d"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="%"
                android:textSize="15dp"/>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewNotas"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/PROMEDIAR"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="PROMEDIAR"
                android:textStyle="bold"
                android:background="@drawable/fondobotonguardar"/>

            <TextView
                android:id="@+id/txtPromediarNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERE PROMEDIO DE NOTAS"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
