<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tivi.appinicio.Relacionando.Relacion_Mater_Alum">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_Materia_Selecc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="MATERIA SELECCIONADA"
                android:textColor="#eaf70000"
                android:textSize="30dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona un estudiante: "
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#e40e19"/>

            <Spinner
                android:id="@+id/spinnerAlumnos"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/txt_id_Alum_Selec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="ID_ALUMNO"
                android:textSize="20dp" />
        </LinearLayout>




        <TextView
            android:id="@+id/txt_Alum_Selec_del_Spinn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="NAME ALUMNO "
            android:textColor="#ea0e0e0e"
            android:background="#3e96ffe0"
            android:textSize="20dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="100dp">

            <Button
                android:id="@+id/guardarRelacion"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="AÃ‘ADIR A CLASE"
                android:textSize="15dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:background="@drawable/fondobotonguardar" />


            <Button
                android:id="@+id/btnListarMaterias_Alumnos"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="REGISTRADOS"
                android:textSize="15dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fondobotonlistar" />

        </LinearLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
